@model Lab5.Controllers.SongBase

@{
    ViewBag.Title = "Song details";
}

<h2>Song details</h2>

<div>
    <h4>Information about the song, its album, and artist</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AlbumArtistName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AlbumArtistName)
            @{
                if (!string.IsNullOrEmpty(Model.Album.Artist.BirthName)) 
                { 
                    <text>@string.Format("({0})", Model.Album.Artist.BirthName)</text>
                }
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Composer)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Composer)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Genre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TrackNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TrackNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReleaseDateAsSingle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReleaseDateAsSingle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AlbumName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AlbumName), released on @Model.Album.ReleaseDate.ToShortDateString()<br />
            <img src="@Model.Album.AlbumCoverUrl" alt="" style="margin: 1em 0 1em 0; width: 150px" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
